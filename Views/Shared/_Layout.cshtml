<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - NRBM Law Firm</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("NRBM Law Firm", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <!--<li>@Html.ActionLink("About", "About", "Home")</li>-->
                            <li>@Html.ActionLink("Appointments", "Index", "Appointment")</li>
                            <li>@Html.ActionLink("Cases", "Index", "Case")</li>
                            <li>@Html.ActionLink("Counsel", "Index", "Counsels")</li>
                            <li>@Html.ActionLink("Court Appearances", "Index", "CourtAppearance")</li>
                            <li>@Html.ActionLink("Salaries", "Index", "WorksFor")</li>
                            <!--<li>@Html.ActionLink("Contact", "Index", "Contact")</li>-->
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - NRBM Law Firm</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
