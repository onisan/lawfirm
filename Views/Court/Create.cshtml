@model MvcLawFirm.Models.NRBM_COURTAPPEARANCE

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Court Appearance</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CLIENTID, "Client")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CLIENTID", String.Empty) @Html.ActionLink("Create New Client", "../Client/Create")
            @Html.ValidationMessageFor(model => model.CLIENTID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LAWID, "Lawyer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LAWID", String.Empty) @Html.ActionLink("Create New Lawyer", "../Lawyer/Create")
            @Html.ValidationMessageFor(model => model.LAWID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ADLAWID, "Adverse Lawyer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ADLAWID", String.Empty) @Html.ActionLink("Create New Adverse Lawyer", "../AdverseLawyer/Create")
            @Html.ValidationMessageFor(model => model.ADLAWID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DATEON, "Court Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DATEON)
            @Html.ValidationMessageFor(model => model.DATEON)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RESULTS, "Results")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RESULTS)
            @Html.ValidationMessageFor(model => model.RESULTS)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/jquery.ui.core.min.js", "~/Scripts/jquery.ui.datepicker.min.js", "~/Scripts/DatePickerReady.js")
    @Styles.Render("~/Content/themes/base/jquery.ui.core.css", "~/Content/themes/base/jquery.ui.datepicker.css", "~/Content/themes/base/jquery.ui.theme.css")
}
