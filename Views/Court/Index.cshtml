@model IEnumerable<MvcLawFirm.Models.NRBM_COURTAPPEARANCE>

@{
    ViewBag.Title = "Index";
}

<h2>Court Appearance</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
     @using (Html.BeginForm("Results", "Court")){    
         <p> Search: @Html.TextBox("SearchString") <br />   
         <input type="submit" value="Filter" /></p> 
     }
<table>
    <tr>
        <th>
            CLIENT
        </th>
        <th>
            LAWYER
        </th>
        <th>
            ADVERSE LAWYER
        </th>
        <th>
            DATE
        </th>
        <th>
            RESULTS
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NRBM_CLIENT.FNAME) @Html.DisplayFor(modelItem => item.NRBM_CLIENT.LNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NRBM_LAWYER.FNAME) @Html.DisplayFor(modelItem => item.NRBM_LAWYER.LNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NRBM_ADVERSELAWYER.FNAME) @Html.DisplayFor(modelItem => item.NRBM_ADVERSELAWYER.LNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATEON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RESULTS)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CAID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CAID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CAID })
        </td>
    </tr>
}

</table>