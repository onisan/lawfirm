@model IEnumerable<MvcLawFirm.Models.NRBM_CASE>

@{
    ViewBag.Title = "Index";
}

<h2>Cases</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
     @using (Html.BeginForm("Results", "Case")){    
         <p> Search: @Html.TextBox("SearchString") <br />   
         <input type="submit" value="Filter" /></p> 
     } 
<table>
    <tr>
        <th>
            Client
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Evidence
        </th>
        <th>
            Category
        </th>
        <th>
            Litigation
        </th>
        <th>
            Notes
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>           
             @Html.DisplayFor(modelItem => item.NRBM_CLIENT.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EVIDENCE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LITIGATION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOTES)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CASEID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CASEID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CASEID })
        </td>
    </tr>
}

</table>
