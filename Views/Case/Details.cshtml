@model MvcLawFirm.Models.NRBM_CASE

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Case</legend>


    <div class="display-label">
         Client
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NRBM_CLIENT.FullName)
    </div>

    <div class="display-label">
         Start Date
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SDATE)
    </div>

    <div class="display-label">
         End Date
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EDATE)
    </div>

    <div class="display-label">
         Evidence
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EVIDENCE)
    </div>

    <div class="display-label">
         Category
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CATEGORY)
    </div>

    <div class="display-label">
         Litigation
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LITIGATION)
    </div>

    <div class="display-label">
         Notes
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NOTES)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.CASEID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
