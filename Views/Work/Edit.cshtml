@model MvcLawFirm.Models.NRBM_WORKSFOR

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>WORK</legend>
        @Html.HiddenFor(model=>model.WORKID)
        <div class="editor-label">
            @Html.LabelFor(model => model.STAFFID, "STAFF")
        </div>
        <div class="editor-field">
            @Html.DropDownList("STAFFID", String.Empty)
            @Html.ValidationMessageFor(model => model.STAFFID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LAWID, "LAWYER")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LAWID", String.Empty)
            @Html.ValidationMessageFor(model => model.LAWID)
        </div>

        <div class="editor-label">
            <label for="SDATE">START DATE</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SDATE)
            @Html.ValidationMessageFor(model => model.SDATE)
        </div>

        <div class="editor-label">
            <label for="EDATE">END DATE</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EDATE)
            @Html.ValidationMessageFor(model => model.EDATE)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SALARY)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SALARY)
            @Html.ValidationMessageFor(model => model.SALARY)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HOURS)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HOURS)
            @Html.ValidationMessageFor(model => model.HOURS)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/jquery.ui.core.min.js", "~/Scripts/jquery.ui.datepicker.min.js", "~/Scripts/DatePickerReady.js")
    @Styles.Render("~/Content/themes/base/jquery.ui.core.css", "~/Content/themes/base/jquery.ui.datepicker.css", "~/Content/themes/base/jquery.ui.theme.css")
}
