@model MvcLawFirm.Models.NRBM_COUNSELS

@{
    ViewBag.Title = "Create";
}

<h2>Create a Counsel Relation</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>COUNSELS</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.LAWID, "LAWYER")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LAWID", String.Empty)
            @Html.ValidationMessageFor(model => model.LAWID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CLIENTID, "CLIENT")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CLIENTID", String.Empty)
            @Html.ValidationMessageFor(model => model.CLIENTID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SDATE, "START DATE")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SDATE)
            @Html.ValidationMessageFor(model => model.SDATE)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EDATE, "END DATE")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EDATE)
            @Html.ValidationMessageFor(model => model.EDATE)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HOURS)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HOURS)
            @Html.ValidationMessageFor(model => model.HOURS)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FEES)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FEES)
            @Html.ValidationMessageFor(model => model.FEES)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/jquery.ui.core.min.js", "~/Scripts/jquery.ui.datepicker.min.js", "~/Scripts/DatePickerReady.js")
    @Styles.Render("~/Content/themes/base/jquery.ui.core.css", "~/Content/themes/base/jquery.ui.datepicker.css", "~/Content/themes/base/jquery.ui.theme.css")
}